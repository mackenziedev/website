---
import { siteConfig } from '../config.js';
import Footer from '../components/Footer.astro';

const { title, description = siteConfig.bio } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | {siteConfig.name}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href={siteConfig.favicon}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Replaced Nucleo with Font Awesome 6.7 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-background text-primary font-body antialiased">
  <slot />
  <!-- Added Footer globally to all pages -->
  <Footer />
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    overflow-x: hidden;
  }

  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #1E1E1E;
  }

  ::-webkit-scrollbar-thumb {
    background: #3D3D3D;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  .prose {
    color: #F5F5F5;
  }

  .prose h1, .prose h2, .prose h3, .prose h4 {
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    color: #F5F5F5;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h1 {
    font-size: 3rem;
    line-height: 1.2;
  }

  .prose h2 {
    font-size: 2.5rem;
    line-height: 1.3;
  }

  .prose h3 {
    font-size: 2rem;
    line-height: 1.4;
  }

  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.7;
    color: #A6A6A6;
  }

  .prose a {
    color: #F5F5F5;
    text-decoration: underline;
    transition: opacity 0.2s;
  }

  .prose a:hover {
    opacity: 0.7;
  }

  .prose code {
    background: #1E1E1E;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: #F5F5F5;
  }

  .prose pre {
    background: #1E1E1E;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose ul, .prose ol {
    margin-left: 2rem;
    margin-bottom: 1.5rem;
    color: #A6A6A6;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose blockquote {
    border-left: 4px solid #3D3D3D;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #A6A6A6;
  }

  .prose img {
    border-radius: 8px;
    margin: 2rem 0;
  }

  .prose hr {
    border: none;
    border-top: 1px solid #3D3D3D;
    margin: 3rem 0;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>
