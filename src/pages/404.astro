---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist.">
  <Navigation />
  
  <main class="min-h-screen flex items-center justify-center px-6">
    <div class="text-center max-w-2xl">
      <!-- Animated 404 -->
      <div class="relative mb-8">
        <h1 class="text-[200px] font-display leading-none gradient-text animate-pulse-glow">
          404
        </h1>
        <div class="absolute inset-0 blur-3xl opacity-30 gradient-bg"></div>
      </div>
      
      <h2 class="text-4xl font-display mb-4">Page Not Found</h2>
      <p class="text-text-secondary text-lg mb-8 leading-relaxed">
        Oops! The page you're looking for seems to have wandered off into the digital void.
        Let's get you back on track.
      </p>
      
      <div class="flex gap-4 justify-center flex-wrap">
        <a 
          href="/" 
          class="px-8 py-4 gradient-bg rounded-full font-medium hover:scale-105 transition-transform glow-hover inline-flex items-center gap-2"
        >
          <i class="fa-solid fa-home"></i>
          Back to Home
        </a>
        <a 
          href="/#projects" 
          class="px-8 py-4 glass glass-hover rounded-full font-medium hover:scale-105 transition-transform inline-flex items-center gap-2"
        >
          <i class="fa-solid fa-folder"></i>
          View Projects
        </a>
      </div>
      
      <!-- Decorative elements -->
      <div class="mt-16 flex justify-center gap-8 text-text-secondary">
        <div class="animate-float" style="animation-delay: 0s;">
          <i class="fa-solid fa-code text-4xl"></i>
        </div>
        <div class="animate-float" style="animation-delay: 0.5s;">
          <i class="fa-solid fa-bug text-4xl"></i>
        </div>
        <div class="animate-float" style="animation-delay: 1s;">
          <i class="fa-solid fa-terminal text-4xl"></i>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
