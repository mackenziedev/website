---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { siteConfig } from '../config.js';
---

<BaseLayout title="About" description={`Learn more about ${siteConfig.name}, a ${siteConfig.title}`}>
  <Navigation />
  
  <main class="min-h-screen pt-32 pb-20">
    <div class="max-w-4xl mx-auto px-6">
      <div class="mb-12">
        <p class="text-secondary text-sm mb-4">... /About me ...</p>
        <h1 class="text-7xl lg:text-8xl font-display mb-6 leading-none">
          About Me
        </h1>
      </div>

      <div class="grid lg:grid-cols-3 gap-12 mb-16">
        <div class="lg:col-span-1">
          <img 
            src={siteConfig.avatar || "/placeholder.svg"}
            alt={siteConfig.name}
            class="w-full rounded-2xl shadow-2xl"
          />
        </div>

        <div class="lg:col-span-2 space-y-6 text-secondary text-lg leading-relaxed">
          <p>
            Hi, I'm <span class="text-primary font-semibold">{siteConfig.name}</span>, a passionate full-stack developer 
            with a love for creating beautiful, functional, and user-friendly applications.
          </p>

          <p>
            I specialize in modern web technologies including React, Next.js, Astro, Node.js, and TypeScript. 
            My goal is to write clean, maintainable code that not only works well but is also enjoyable to work with.
          </p>

          <p>
            When I'm not coding, you can find me exploring new technologies, contributing to open-source projects, 
            or sharing my knowledge through blog posts and tutorials.
          </p>
        </div>
      </div>

      <div class="mb-16">
        <h2 class="text-4xl font-display mb-8">Skills & Technologies</h2>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-surface p-6 rounded-xl">
            <h3 class="text-xl font-display mb-4">Frontend</h3>
            <ul class="space-y-2 text-secondary">
              <li>React & Next.js</li>
              <li>Astro</li>
              <li>TypeScript</li>
              <li>TailwindCSS</li>
              <li>Vue & Svelte</li>
            </ul>
          </div>

          <div class="bg-surface p-6 rounded-xl">
            <h3 class="text-xl font-display mb-4">Backend</h3>
            <ul class="space-y-2 text-secondary">
              <li>Node.js & Express</li>
              <li>PostgreSQL & MongoDB</li>
              <li>REST & GraphQL APIs</li>
              <li>WebSocket</li>
              <li>Microservices</li>
            </ul>
          </div>

          <div class="bg-surface p-6 rounded-xl">
            <h3 class="text-xl font-display mb-4">DevOps</h3>
            <ul class="space-y-2 text-secondary">
              <li>Docker & Kubernetes</li>
              <li>CI/CD Pipelines</li>
              <li>AWS & Vercel</li>
              <li>Nginx</li>
              <li>Git & GitHub Actions</li>
            </ul>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-4xl font-display mb-8">Experience</h2>
        
        <div class="space-y-8">
          <div class="border-l-2 border-accent pl-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-2xl font-display">Senior Full-Stack Developer</h3>
              <span class="text-secondary text-sm">2022 - Present</span>
            </div>
            <p class="text-secondary mb-2">Tech Innovations Inc.</p>
            <p class="text-secondary">
              Leading development of scalable web applications, mentoring junior developers, 
              and implementing best practices across the engineering team.
            </p>
          </div>

          <div class="border-l-2 border-accent pl-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-2xl font-display">Full-Stack Developer</h3>
              <span class="text-secondary text-sm">2020 - 2022</span>
            </div>
            <p class="text-secondary mb-2">Digital Solutions Co.</p>
            <p class="text-secondary">
              Developed and maintained multiple client projects, focusing on performance optimization 
              and user experience improvements.
            </p>
          </div>

          <div class="border-l-2 border-accent pl-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-2xl font-display">Junior Developer</h3>
              <span class="text-secondary text-sm">2018 - 2020</span>
            </div>
            <p class="text-secondary mb-2">StartUp Labs</p>
            <p class="text-secondary">
              Built responsive web applications and contributed to the development of internal tools 
              and automation scripts.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
