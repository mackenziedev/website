---
import { siteConfig } from '../config.js';
---

<footer class="relative overflow-hidden border-t border-white/10">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-accent/5 animate-gradient"></div>
  
  <div class="max-w-7xl mx-auto px-6 py-16 relative z-10">
    <div class="grid md:grid-cols-4 gap-12 mb-12">
      <!-- Brand section -->
      <div class="md:col-span-2">
        <h3 class="text-3xl font-display mb-4 gradient-text">{siteConfig.name}</h3>
        <p class="text-text-secondary mb-6 leading-relaxed">
          {siteConfig.bio}
        </p>
        <div class="flex gap-4">
          {siteConfig.socials.slice(0, 5).map((social) => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener"
              class="w-10 h-10 glass glass-hover rounded-full flex items-center justify-center group hover:scale-110 transition-all"
            >
              <i class={`${social.icon} group-hover:text-primary transition-colors`}></i>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="font-display text-lg mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {siteConfig.navigation.map((item) => (
            <li>
              <a href={item.href} class="text-text-secondary hover:text-primary transition-colors text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-display text-lg mb-4">Contact</h4>
        <ul class="space-y-2 text-sm text-text-secondary">
          <li>
            <a href={`mailto:${siteConfig.email}`} class="hover:text-primary transition-colors">
              {siteConfig.email}
            </a>
          </li>
          <li>
            <a href={`https://${siteConfig.domain}`} target="_blank" class="hover:text-primary transition-colors">
              {siteConfig.domain}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-text-secondary text-sm">
        {siteConfig.footer.copyright}
      </p>
      
      <!-- Legal links with toggle -->
      <div class="flex gap-6 text-sm">
        {siteConfig.footer.showImprint && (
          <a href={siteConfig.footer.imprintLink} class="text-text-secondary hover:text-primary transition-colors">
            Imprint
          </a>
        )}
        {siteConfig.footer.showPrivacy && (
          <a href={siteConfig.footer.privacyLink} class="text-text-secondary hover:text-primary transition-colors">
            Privacy
          </a>
        )}
        {siteConfig.footer.showTerms && (
          <a href={siteConfig.footer.termsLink} class="text-text-secondary hover:text-primary transition-colors">
            Terms
          </a>
        )}
      </div>
    </div>
  </div>
</footer>
